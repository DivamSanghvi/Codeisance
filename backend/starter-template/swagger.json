{
  "openapi": "3.0.0",
  "info": {
    "title": "Community Blood & Organ Donation API",
    "version": "1.0.0",
    "description": "API for managing hospitals and blood donation matching between patients and donors"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/hospitals": {
      "post": {
        "summary": "Create a new hospital",
        "tags": ["Hospitals"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HospitalInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Hospital created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "List hospitals with filters and pagination",
        "tags": ["Hospitals"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            },
            "description": "Page number"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            },
            "description": "Items per page"
          },
          {
            "name": "q",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Search query for name or city"
          },
          {
            "name": "city",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by city"
          },
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["HOSPITAL", "BLOOD_BANK", "CLINIC"]
            },
            "description": "Filter by hospital type"
          },
          {
            "name": "service",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by service"
          },
          {
            "name": "nearLon",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "float"
            },
            "description": "Longitude for geo search"
          },
          {
            "name": "nearLat",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "float"
            },
            "description": "Latitude for geo search"
          },
          {
            "name": "nearKm",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "float",
              "minimum": 0
            },
            "description": "Radius in km for geo search"
          },
          {
            "name": "includeInactive",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["1"]
            },
            "description": "Include inactive hospitals"
          }
        ],
        "responses": {
          "200": {
            "description": "List of hospitals",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HospitalListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/hospitals/{id}": {
      "get": {
        "summary": "Get hospital by ID",
        "tags": ["Hospitals"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Hospital ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Hospital details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "404": {
            "description": "Hospital not found"
          }
        }
      },
      "patch": {
        "summary": "Update hospital (partial)",
        "tags": ["Hospitals"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Hospital ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HospitalUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Hospital updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          }
        }
      },
      "delete": {
        "summary": "Soft delete hospital",
        "tags": ["Hospitals"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Hospital ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Hospital deleted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/patients": {
      "post": {
        "summary": "Register patient and initiate donor matching",
        "tags": ["Patients"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatientInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Patient registered and matching initiated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          }
        }
      }
    },
    "/api/patients/{hospitalId}": {
      "get": {
        "summary": "List patients for a hospital",
        "tags": ["Patients"],
        "parameters": [
          {
            "name": "hospitalId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Hospital ID"
          }
        ],
        "responses": {
          "200": {
            "description": "List of patients",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatientListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/patients/confirm/{token}": {
      "post": {
        "summary": "Confirm donation match",
        "tags": ["Patients"],
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Confirmation token"
          }
        ],
        "responses": {
          "200": {
            "description": "Match confirmed and appointment created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid or expired token"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HospitalInput": {
        "type": "object",
        "required": ["name", "licenseNo", "address", "location"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 120,
            "description": "Hospital name"
          },
          "type": {
            "type": "string",
            "enum": ["HOSPITAL", "BLOOD_BANK", "CLINIC"],
            "default": "HOSPITAL"
          },
          "licenseNo": {
            "type": "string",
            "description": "Unique license number"
          },
          "contact": {
            "type": "object",
            "properties": {
              "phone": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
            }
          },
          "address": {
            "type": "object",
            "required": ["line1", "city", "state", "pincode", "country"],
            "properties": {
              "line1": {
                "type": "string"
              },
              "line2": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "pincode": {
                "type": "string"
              },
              "country": {
                "type": "string"
              }
            }
          },
          "location": {
            "type": "object",
            "required": ["type", "coordinates"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["Point"]
              },
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "number",
                  "format": "float"
                },
                "minItems": 2,
                "maxItems": 2,
                "description": "[longitude, latitude]"
              }
            }
          },
          "services": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "HospitalUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 120
          },
          "type": {
            "type": "string",
            "enum": ["HOSPITAL", "BLOOD_BANK", "CLINIC"]
          },
          "licenseNo": {
            "type": "string"
          },
          "contact": {
            "type": "object",
            "properties": {
              "phone": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
            }
          },
          "address": {
            "type": "object",
            "properties": {
              "line1": {
                "type": "string"
              },
              "line2": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "pincode": {
                "type": "string"
              },
              "country": {
                "type": "string"
              }
            }
          },
          "location": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["Point"]
              },
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "number",
                  "format": "float"
                },
                "minItems": 2,
                "maxItems": 2
              }
            }
          },
          "services": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "PatientInput": {
        "type": "object",
        "required": ["hospitalId", "name", "bloodType", "unitsNeeded"],
        "properties": {
          "hospitalId": {
            "type": "string",
            "description": "Hospital ObjectId"
          },
          "name": {
            "type": "string",
            "description": "Patient name"
          },
          "bloodType": {
            "type": "string",
            "enum": ["O-", "O+", "A-", "A+", "B-", "B+", "AB-", "AB+"],
            "description": "Patient blood type"
          },
          "unitsNeeded": {
            "type": "integer",
            "minimum": 1,
            "description": "Units of blood needed"
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "description": "Response data"
          },
          "page": {
            "type": "integer"
          },
          "limit": {
            "type": "integer"
          },
          "total": {
            "type": "integer"
          }
        }
      },
      "HospitalListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Hospital"
            }
          },
          "page": {
            "type": "integer"
          },
          "limit": {
            "type": "integer"
          },
          "total": {
            "type": "integer"
          }
        }
      },
      "PatientListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Patient"
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Hospital": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "licenseNo": {
            "type": "string"
          },
          "contact": {
            "type": "object"
          },
          "address": {
            "type": "object"
          },
          "location": {
            "type": "object"
          },
          "services": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "isActive": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Patient": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "hospitalId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "bloodType": {
            "type": "string"
          },
          "unitsNeeded": {
            "type": "integer"
          },
          "status": {
            "type": "string",
            "enum": ["PENDING", "FULFILLED"]
          },
          "confirmedCount": {
            "type": "integer"
          },
          "fulfilledAt": {
            "type": "string",
            "format": "date-time"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
